<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <Button
        android:id="@+id/btn_invite_member"
        style="@style/btnTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_invite_btn"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:text="Invite Members"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_invite_app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_invite_app"
        style="@style/btnTheme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_invite_bt_inactive"
        android:fontFamily="@font/poppins_semibold"
        android:text="Invite App"
        android:textAllCaps="false"
        android:textColor="@color/main_color"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/btn_invite_member"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_invite_member"
        app:layout_constraintTop_toTopOf="@id/btn_invite_member" />


</androidx.constraintlayout.widget.ConstraintLayout>