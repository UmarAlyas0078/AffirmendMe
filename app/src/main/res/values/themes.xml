<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AffirmedMe" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Status bar color change -->
    <style name="HiddenTitleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="textThemeLogin">
        <item name="android:textSize">@dimen/_28ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserratmedium</item>
    </style>

    <style name="textonboard">
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/spfbold</item>
    </style>

    <style name="textDescription">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserratmedium</item>
    </style>

    <style name="txtLogin">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="txtSkip">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="textDescriptionOnboard">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/spffont</item>
    </style>

    <style name="btnTheme">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="fontFamily">@font/spffont</item>
    </style>

    <style name="HiddenThemeDrawer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
    </style>
</resources>